post-patch {
	reinplace "s|omnijson||g" "${worksrcpath}/reqs.txt"
	reinplace "s|clint==0.2.4|clint|g" "${worksrcpath}/reqs.txt"
	reinplace "s|import omnijson||g" "${worksrcpath}/legit/bootstrap.py"
}

