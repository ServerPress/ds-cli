checksums           rmd160  dbb6f1aedcafe13579d98eb225d7459078f3b56f \
                    sha256  71b4d8c52d781e2b4afe2d3609e9d700cb631ddbf51060bc702644733cc70869

if {${name} ne ${subport}} {
    depends_lib-append  port:proj

    post-destroot {
        xinstall -m 644 -W ${worksrcpath} \
            README.md PKG-INFO \
            ${destroot}${prefix}/share/doc/${subport}
    }

    livecheck.type      none
} else {
    livecheck.type      regex
    livecheck.url       https://pypi.python.org/pypi/pyproj/json
    livecheck.regex     {pyproj-(\d+(?:\.\d+)*)\.[tz]}
}
