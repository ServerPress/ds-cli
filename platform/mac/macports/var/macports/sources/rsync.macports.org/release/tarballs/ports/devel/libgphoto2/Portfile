# $Id: Portfile 142761 2015-11-22 20:58:20Z ryandesign@macports.org $

PortSystem          1.0

name                libgphoto2
version             2.5.9
categories          devel
platforms           darwin
maintainers         ryandesign openmaintainer
license             LGPL-2+

description         The gphoto2 digital camera library

long_description    The gphoto2 library can be used by applications to \
                    access various digital camera models.

homepage            http://www.gphoto.org/proj/libgphoto2/
master_sites        sourceforge:project/gphoto/libgphoto/${version}
use_bzip2           yes

checksums           rmd160  156bc045c94a84bee25e57aff843b1d0bf93603a \
                    sha256  cdb0e8e3a93417eb25892c4b03e64c07e93488ce05072edb62e1b70ff3291f32

depends_build       port:pkgconfig

depends_lib         path:bin/dbus-daemon:dbus \
                    port:gettext \
                    port:jpeg \
                    port:libexif \
                    port:libiconv \
                    port:libusb-compat \
                    port:libxml2 \
                    port:libtool \
                    port:gd2

configure.args      --with-drivers=all \
                    --with-libexif=${prefix} \
                    ac_cv_prog_AWK=/usr/bin/awk

variant doxygen description {Use doxygen to generate API docs} {
    depends_build-append    port:doxygen \
                            path:bin/dot:graphviz
}
if {![variant_isset doxygen]} {
    configure.args-append   ac_cv_path_DOXYGEN=false
}

livecheck.regex     /${name}-(\[0-9.\]+)${extract.suffix}
