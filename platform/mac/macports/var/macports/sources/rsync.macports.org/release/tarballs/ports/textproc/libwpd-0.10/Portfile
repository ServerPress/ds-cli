# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4
# $Id: Portfile 121261 2014-06-21 20:01:38Z devans@macports.org $

PortSystem      1.0

name            libwpd-0.10
set gname       libwpd
version         0.10.0
maintainers     devans openmaintainer
categories      textproc
platforms       darwin
license         LGPL-2+

description     A general purpose library for reading WordPerfect files.
long_description ${description}

homepage        http://libwpd.sourceforge.net/
master_sites    sourceforge:project/libwpd/libwpd/libwpd-${version}

use_xz          yes

distname        ${gname}-${version}

checksums       rmd160  b5789de7d3dbb364a1e2999f96a880a4437982a2 \
                sha256  9d8ba780cb9c0aed7859c59a602138d8ab360b40f6aa655e42f5f769f2cfd32c

depends_build   port:pkgconfig

depends_lib     path:lib/pkgconfig/glib-2.0.pc:glib2 \
                port:librevenge

use_autoreconf  yes
autoreconf.args -fvi

patch {
    reinplace "s|need_relink=yes|need_relink=no|g" ${worksrcpath}/ltmain.sh
}

configure.args  --without-docs --disable-werror

variant docs description {Build API documentation} {
    depends_build-append    port:doxygen
    configure.args-delete   --without-docs
}

# Legacy variant doxygen can be removed after May 2015
variant doxygen description {Legacy variant, use docs instead} {}

if {[variant_isset doxygen]} {
    default_variants +docs
}

# delete binaries that conflict with libwpd

post-destroot {
    file delete -force ${destroot}${prefix}/bin
}

livecheck.regex /${gname}-(\[0-9.\]+)${extract.suffix}
