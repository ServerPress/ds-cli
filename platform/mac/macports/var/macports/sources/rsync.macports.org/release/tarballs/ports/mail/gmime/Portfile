# $Id: Portfile 132085 2015-01-23 11:39:05Z devans@macports.org $

PortSystem      1.0
PortGroup       gobject_introspection 1.0

name            gmime
version         2.6.20
set branch      [join [lrange [split ${version} .] 0 1] .]

description     GMime is a C/C++ library for parsing and creating messages using \
                the Multipurpose Internet Mail Extension (MIME)

long_description \
                ${description}

maintainers     nomaintainer
categories      mail
license         LGPL-2.1+
platforms       darwin
homepage        http://spruce.sourceforge.net/gmime/
master_sites    gnome:sources/${name}/${branch}

use_xz          yes

checksums       rmd160  c0f41c81a9c7d7ecd968efc3ee68e584ebe0ee0a \
                sha256  e0a170fb264c2ae4cecd852f4e7aaddb8d58e8f3f0b569ce2d2a4704f55bdf65

depends_build   port:pkgconfig

depends_lib     port:libgpg-error \
                port:gpgme \
                port:vala \
                port:libiconv \
                path:lib/pkgconfig/glib-2.0.pc:glib2 \
                port:gettext \
                port:zlib

gobject_introspection yes

configure.args  --enable-vala=yes \
                --enable-cryptography \
                --enable-smime \
                --disable-mono

test.run        yes
test.target     check

livecheck.type  gnome
