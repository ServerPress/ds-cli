# $Id$

PortSystem          1.0
PortGroup           python 1.0
PortGroup           github 1.0

github.setup        pfnet chainer 1.1.0 v.
name                py-chainer
maintainers         hum openmaintainer
license             MIT
supported_archs     noarch

description         A flexible framework of neural networks
long_description    ${description}

homepage            http://chainer.org/
platforms           darwin

python.versions     27 34

if {${name} ne ${subport}} {
    checksums           rmd160  4d9290a4a7c5ab85582c3bc4d0cc6192d95f0cd3 \
                        sha256  1f42c7aff9e30e1ce5356226231f0d29f91b51908c8bf2595540e172ee6049c8

    depends_lib-append  port:py${python.version}-numpy \
                        port:py${python.version}-scikit-learn

    post-destroot {
        # install additional documents
        set docdir ${prefix}/share/doc/${subport}
        xinstall -d ${destroot}${docdir}
        xinstall -W ${worksrcpath} \
            LICENSE README.md \
            ${destroot}${docdir}
        # install examples
        foreach f [glob -directory ${worksrcpath}/examples *] {
            copy $f ${destroot}${docdir}/examples/[file tail $f]
        }
    }

    livecheck.type      none
}
