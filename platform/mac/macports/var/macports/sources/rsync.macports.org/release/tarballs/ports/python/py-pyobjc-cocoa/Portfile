# $Id: Portfile 130123 2014-12-27 07:45:15Z larryv@macports.org $

PortSystem          1.0
PortGroup           python 1.0

name                py-pyobjc-cocoa
version             3.0.1
categories-append   devel
platforms           darwin
license             MIT
maintainers         nomaintainer

description         cocoa wrappers for PyObjC
long_description    This port provides the CoreFoundation, Foundation \
                    and AppKit wrappers for use with PyObjC.
homepage            http://pyobjc.sourceforge.net/

master_sites        http://pypi.python.org/packages/source/p/pyobjc-framework-Cocoa/
distname            pyobjc-framework-Cocoa-${version}
checksums           md5     a8eb4d7cbc181d990808372c980dabb1 \
                    sha1    38607c95a127d1f422012d34c3ade220149cfe88 \
                    rmd160  6ac9a422a86863effbbbed41707e0bb138c92ddb

python.versions     26 27 33 34

if {${name} ne ${subport}} {
    depends_lib     port:py${python.version}-pyobjc

    # See https://trac.macports.org/ticket/45310
    # FIXME: remove when version 3.0.2 comes out
    patchfiles      patch2-pyobjc_setup.py.diff

    platform darwin 8 {
        depends_fetch
        depends_lib
        pre-fetch {
            return -code error "PyObjC 2 requires Mac OS X 10.5 or later"
        }
    }

    post-destroot {
        xinstall -m 644 -W ${worksrcpath} \
            LICENSE.txt README.txt \
            ${destroot}${prefix}/share/doc/${subport}
        copy ${worksrcpath}/Examples \
            ${destroot}${prefix}/share/doc/${subport}/examples
        copy ${worksrcpath}/Doc ${destroot}${prefix}/share/doc/${subport}
    }

    livecheck.type  none
} else {
    livecheck.type  regex
    livecheck.url   http://pypi.python.org/pypi/pyobjc-framework-Cocoa/
    livecheck.regex {pyobjc-framework-Cocoa ([0-9.]+)}
}
