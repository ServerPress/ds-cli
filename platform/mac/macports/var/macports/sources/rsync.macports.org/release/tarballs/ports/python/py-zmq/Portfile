if {${name} ne ${subport}} {

    if {[lsearch {26 33} ${python.version}] != -1} {
        version             14.7.0
        revision            1
        distname            pyzmq-${version}
        checksums           rmd160  4adc0c6bc955456ba2eaeecc4d5d16614bef643a \
