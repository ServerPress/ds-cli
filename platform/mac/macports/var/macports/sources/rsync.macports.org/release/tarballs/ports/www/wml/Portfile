patchfiles              patch-configure.diff \
                        patch-Makefile.in.diff \
                        patch-wml_frontend-wml.src.diff \
                        patch-no_eperl.diff \
                        patch-no_gm4.diff \
                        patch-no_tidy.diff \
                        patch-no_txt2html.diff

