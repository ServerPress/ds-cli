                        port:m4 \
                        port:tidy

depends_lib             port:gdbm \
                        port:gettext \
                        port:libiconv \
                        port:p5.16-getopt-long \
                        port:p5.16-bit-vector \
                        port:p5.16-image-size \
                        port:p5.16-io \
                        port:p5.16-term-readkey

depends_build           port:lynx

configure.args          --with-perl=${prefix}/bin/perl5.16 \
                        --without-modules \
                        --with-openworld \
                        --with-cc=${configure.cc}

configure.env           CPATH=${prefix}/include LANG=C LC_ALL=C

build.args              CC=${configure.cc} CPP=${configure.cpp}

build.env               LANG=C LC_ALL=C

destroot.destdir        prefix=${destroot}${prefix} \
                        mandir=${destroot}${prefix}/share/man

