# $Id: Portfile 133705 2015-03-09 07:17:26Z jeremyhu@macports.org $

PortSystem      1.0

name            librevenge
version         0.0.2
maintainers     devans openmaintainer
categories      textproc
platforms       darwin
license         LGPL-2+

description     librevenge provides a generic API for file converters .
long_description ${description}

homepage        http://libwpd.sourceforge.net/
master_sites    sourceforge:project/libwpd/librevenge/librevenge-${version}

use_xz          yes

checksums       rmd160  a2bf1bcc62f59e223af6c8fdc04b937154e88426 \
                sha256  f6f280c4345546aad16aeafd5cf2e4a4ac31a81606171755465bba0d96efcf0f

depends_build   port:pkgconfig

depends_lib     port:zlib \
                port:boost

# autoreconf to get an updated glibtool that knows to pass -stdlib=XXXX at link time
use_autoreconf  yes
autoreconf.args -fvi

configure.args  --without-docs \
                --disable-tests \
                --disable-werror \
                --disable-silent-rules

variant docs description {Build API documentation} {
    depends_build-append    port:doxygen
    configure.args-delete   --without-docs
}

livecheck.regex /${name}-(\[0-9.\]+)${extract.suffix}
