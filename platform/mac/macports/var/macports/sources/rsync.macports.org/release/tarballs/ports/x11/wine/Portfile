patchfiles                  BOOL.patch \
                            mach_machine.patch \
                            tiger-shell.patch

configure.ldflags-append    -framework CoreServices \
                            -lz

configure.args              --without-alsa \
                            --without-capi \
                            --with-cms \
                            --with-coreaudio \
                            --with-cups \
                            --with-curses \
