    {1 pdftex pdftex language.def {-translate-file=cp227.tcx *pdfetex.ini}} \
    {1 etex pdftex language.def {-translate-file=cp227.tcx *etex.ini}} \
    {1 pdfetex pdftex language.def {-translate-file=cp227.tcx *pdfetex.ini}} \
    {1 tex tex - {tex.ini}}

