# $Id: Portfile 138718 2015-07-17 03:17:35Z devans@macports.org $

PortSystem      1.0

name            gnome-bindings-perl5
version         2.32.1
revision        2
categories      devel gnome
maintainers     nomaintainer
platforms       darwin
supported_archs noarch
description     The GNOME bindings for Perl

long_description \
                The GNOME bindings is the set of libraries that allow developers to \
                develop fully GNOME compliant applications in C#, C++, Java, Perl, and \
                Python. The platform is one of the suites of software packages that form \
                the complete GNOME project offerings. These are the GNOME bindings for Perl.

homepage        http://www.gnome.org/

# set 'pbranch' to desired perl version
# now using 5.22 (#48365)

set pbranch     5.22

depends_lib     port:p${pbranch}-glib    \
                port:p${pbranch}-gnome2-canvas    \
                port:p${pbranch}-gnome2-gconf    \
                port:p${pbranch}-gnome2-vfs    \
                port:p${pbranch}-gnome2    \
                port:p${pbranch}-gtk2-gladexml \
                port:p${pbranch}-gtk2    \
                port:p${pbranch}-pango

distfiles

use_configure   no

build           {}

destroot        {
    file mkdir ${destroot}${prefix}/share/doc/
    system "echo ${long_description} > ${destroot}${prefix}/share/doc/README.${name}.txt"
}

livecheck.type  none
