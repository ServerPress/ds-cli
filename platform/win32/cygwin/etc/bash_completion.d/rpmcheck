# bash completion for rpmcheck

have rpmcheck &&
_rpmcheck()
{
    local cur prev

    COMPREPLY=()
    _get_comp_words_by_ref cur prev

    case $prev in
        -base)
            _filedir
            return 0
            ;;
    esac

    if [[ "$cur" == -* ]]; then
        COMPREPLY=( $( compgen -W '-explain -failures -successes \
            -dump -dump-all -base -help -compressed-input' -- "$cur" ) )
    else
        _filedir
    fi
} &&
complete -F _rpmcheck rpmcheck $files

