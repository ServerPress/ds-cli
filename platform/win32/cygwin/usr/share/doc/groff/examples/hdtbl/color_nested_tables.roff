.PN 15 Text before first table.
.nr # 0 1
*****
.PN 39 .random# ".defcolor c\\n[#] rgb \\\\*[#random] " \
  ".TBL csp=0 cpd=0 border=1n bc=c\\n[#]" \
  ".if \\\\n+#=1 .CPTN val=b Nested Tables with Randomly Colored Border" \
  .TR .TD
.PN 39 .ETB
.PN 15 Text after first table.
.
.time
