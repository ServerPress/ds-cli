.bp
.
.time start
.
.PN 15 Text before second table.
*****
.nr # 0 1
.PN 39 .random# ".defcolor c\\n[#] rgb \\\\*[#random] " \
  ".TBL csp=0 cpd=1n border= bgc=c\\n[#]" \
  ".if \\\\n+#=1 .CPTN val=b Nested Tables with Randomly Colored Background" \
  .TR .TD
.PN 39 .ETB
.PN 25 Text after second table.
.
